@model StoreDemo.ViewModels.BaseSearchDepartmentsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_LayoutView</title>
</head>
<body>
<div>
    @Html.ActionLink("Main Page", "Index", "Home")
    <div>
        <input type="text" placeholder="Search"/>
        <select>
            <option value="0" selected disabled hidden>Select department</option>
            @foreach (var name in Model.DepartmentsNames)
            {
                <option value="@name">
                    @name
                </option>
            }
        </select>
        <input type="button" value="Search"/>
    </div>
    <div>
        <span>
            @if (Session["Cart"] == null || Session["CartCount"] == null)
            {
                <text>0</text>
            }
            else
            {
                <text>@Session["CartCount"]</text>
            }
            </span>
        <span>  @Html.ActionLink("Cart", "Index", "Cart")</span>
    </div>

</div>

@RenderBody()
</body>
</html>
